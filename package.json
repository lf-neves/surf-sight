{
  "name": "surf-sight-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "SurfSight monorepo - web app and microservices",
  "scripts": {
    "dev": "pnpm --parallel --filter web-app --filter @surf-sight/api-service dev",
    "dev:web": "pnpm --filter web-app dev",
    "dev:api": "pnpm --filter @surf-sight/api-service dev",
    "build": "pnpm --filter web-app build",
    "start": "pnpm --filter web-app start",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check",
    "build:all": "pnpm -r build",
    "db:push": "pnpm --filter @surf-sight/database db:push",
    "db:migrate": "pnpm --filter @surf-sight/database db:migrate",
    "db:studio": "pnpm --filter @surf-sight/database db:studio",
    "db:seed": "pnpm --filter @surf-sight/database db:seed",
    "db:generate": "pnpm --filter @surf-sight/database db:generate"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "devDependencies": {
    "@types/node": "^22.13.5",
    "@types/jest": "^29.5.14",
    "@types/pg": "^8.15.6",
    "aws-lambda": "^1.0.7",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@apollo/react-hooks": "^4.0.0",
    "apollo-boost": "^0.4.9",
    "dotenv": "^17.2.3",
    "graphql": "^16.8.1",
    "jest": "^29.7.0",
    "@surf-sight/database": "workspace:*"
  }
}
