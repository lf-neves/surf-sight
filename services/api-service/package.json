{
  "name": "@surf-sight/api-service",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/handler.js",
  "scripts": {
    "dev": "serverless offline --stage local --httpPort 4000",
    "build": "rm -rf dist && tsc && cp -R src/graphql/modules dist/graphql/",
    "start": "node dist/handler.js",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:watch": "graphql-codegen --config codegen.yml --watch",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "package:check": "node scripts/check-package.js",
    "package": "serverless package",
    "migrate": "tsx scripts/run-migrations.ts",
    "deploy": "pnpm migrate && serverless deploy",
    "deploy:skip-migrate": "serverless deploy",
    "test:ssm": "node scripts/test-ssm-config.js",
    "verify:ssm": "tsx scripts/verify-ssm-params.ts",
    "verify:db-url": "tsx scripts/verify-and-update-db-url.ts",
    "test:graphql": "tsx scripts/test-graphql-endpoint.ts",
    "check:architecture": "tsx scripts/check-lambda-architecture.ts"
  },
  "dependencies": {
    "@apollo/server": "^5.0.0",
    "@as-integrations/aws-lambda": "^4.0.1",
    "@graphql-tools/load-files": "^6.6.1",
    "@graphql-tools/merge": "^9.0.0",
    "@graphql-tools/schema": "^10.0.0",
    "@graphql-tools/utils": "^10.0.0",
    "@surf-sight/core": "workspace:*",
    "@surf-sight/database": "workspace:*",
    "bcryptjs": "^3.0.3",
    "dataloader": "^2.2.2",
    "drizzle-orm": "^0.45.1",
    "graphql": "^16.8.1",
    "pg": "^8.17.1",
    "graphql-subscriptions": "^2.0.0",
    "jsonwebtoken": "^9.0.3",
    "openai": "^6.16.0",
    "typesense": "^2.1.0",
    "@aws-sdk/client-ssm": "^3.0.0",
    "@aws-sdk/client-rds": "^3.0.0"
  },
  "devDependencies": {
    "@aws-sdk/credential-providers": "^3.0.0",
    "@eslint/js": "^9.0.0",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@types/aws-lambda": "^8.10.145",
    "@types/bcryptjs": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.2",
    "graphql-tag": "^2.12.6",
    "serverless": "^4.0.0",
    "serverless-dotenv-plugin": "^6.0.0",
    "serverless-offline": "^14.4.0",
    "tsx": "^4.7.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.0.0"
  }
}
