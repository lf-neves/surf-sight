enum JobStatus {
    pending
    processing
    completed
    failed
}

model JobEvent {
    jobId     String    @id @default(uuid()) @db.Uuid
    type      String
    payload   Json      @default("{}")
    status    JobStatus @default(pending)
    createdAt DateTime  @default(now())
    updatedAt DateTime  @updatedAt

    @@index([status])
    @@index([type])
    @@index([createdAt])
    @@map("job_events")
}
