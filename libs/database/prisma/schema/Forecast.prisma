model Forecast {
  forecastId String   @id @default(uuid()) @db.Uuid
  spotId     String   @db.Uuid
  timestamp  DateTime
  raw        Json     @default("{}")
  source     String   @default("stormglass")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  spot       Spot     @relation(fields: [spotId], references: [spotId], onDelete: Cascade)
  summaries  AISummary[]

  @@map("forecasts")
  @@unique([spotId, timestamp])
  @@index([spotId])
  @@index([timestamp])
}

