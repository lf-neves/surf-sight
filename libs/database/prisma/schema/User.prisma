enum UserSkillLevel {
    beginner
    intermediate
    advanced
}

model User {
    userId     String          @id @default(uuid()) @db.Uuid
    email      String          @unique
    name       String?
    phone      String?
    skillLevel UserSkillLevel?
    createdAt  DateTime        @default(now())
    updatedAt  DateTime        @updatedAt

    favorites FavoriteSpot[]

    @@index([email])
    @@map("users")
}
